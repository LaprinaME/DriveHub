@model DriveHub.ViewModels.AddCarServiceViewModel

@{
    ViewData["Title"] = "Добавить услугу";
}

<h2>@ViewData["Title"]</h2>
<style>
    body {
        background-color: #393c42;
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        width: 80%;
        max-width: 600px;
        padding: 20px;
        background-color: #393c42;
        border: 2px solid #FF0033;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    h2 {
        color: #FF0033;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            color: #FFFFFF;
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        background-color: #393c42;
        color: #FFFFFF;
        border: 2px solid #FF0033;
        border-radius: 5px;
    }

        .form-control:focus {
            border-color: #FF0033;
            box-shadow: 0 0 10px #FF0033;
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #FF0033;
        border: none;
        color: #FFFFFF;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #CC0029;
        }

    .text-danger {
        color: #FF0033;
    }

    .return-button {
        display: inline-block;
        padding: 12px 20px; /* Увеличенные отступы */
        background-color: #FF0033; /* Красный фон */
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease; /* Плавный переход */
    }

        .return-button:hover {
            background-color: #dc3545; /* Темнее красный при наведении */
        }

        .return-button:focus {
            box-shadow: 0 0 0 0.2rem rgba(225, 83, 97, 0.5); /* Тень при фокусе */
        }
</style>
<form asp-action="Add" method="post">
    
    <div class="form-group">
        <label asp-for="ServiceName" class="control-label"></label>
        <input asp-for="ServiceName" class="form-control" />
        <span asp-validation-for="ServiceName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
<form method="get" action="/Home/Index">
    <button type="submit" class="return-button">На главную</button>
</form>