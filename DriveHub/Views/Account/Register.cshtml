@model DriveHub.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Регистрация</title>
    <link rel="stylesheet" href="@Url.Content("../css/register.css")">
</head>
<body>
    <div class="register-container">
        <h2>Регистрация</h2>
        <form asp-action="Register" method="post">
            <div>
                <label asp-for="Login">Логин:</label>
                <input asp-for="Login" />
                <span class="validation-message" asp-validation-for="Login"></span>
            </div>
            <div>
                <label asp-for="Password">Пароль:</label>
                <input asp-for="Password" type="password" />
                <span class="validation-message" asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль:</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span class="validation-message" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <label asp-for="RoleCode">Введите код роли:</label>
                <input asp-for="RoleCode" />
                <span class="validation-message" asp-validation-for="RoleCode"></span>
            </div>
            <div>
                <label asp-for="UserCode">Введите код пользователя:</label>
                <input asp-for="UserCode" />
                <span class="validation-message" asp-validation-for="UserCode"></span>
            </div>
            <div class="button-container">
                <button type="submit" class="return-button">Зарегистрироваться</button>
            </div>
        </form>
    </div>
    <div class="button-container">
        <form method="get" action="/Home/Index">
            <button type="submit" class="return-button">Вернуться на главную страницу</button>
        </form>
    </div>
</body>
</html>