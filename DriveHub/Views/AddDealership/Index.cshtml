@model DriveHub.ViewModels.AddDealershipViewModel

@{
    ViewData["Title"] = "Добавить автосалон";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="DealershipID" class="control-label"></label>
        <input asp-for="DealershipID" class="form-control" />
        <span asp-validation-for="DealershipID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DealershipName" class="control-label"></label>
        <input asp-for="DealershipName" class="form-control" />
        <span asp-validation-for="DealershipName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
