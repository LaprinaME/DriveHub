@model DriveHub.ViewModels.AddReviewViewModel

@{
    ViewData["Title"] = "Добавить отзыв";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="ReviewID" class="control-label"></label>
        <input asp-for="ReviewID" class="form-control" />
        <span asp-validation-for="ReviewID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserID" class="control-label"></label>
        <input asp-for="UserID" class="form-control" />
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarID" class="control-label"></label>
        <input asp-for="CarID" class="form-control" />
        <span asp-validation-for="CarID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DatePosted" class="control-label"></label>
        <input asp-for="DatePosted" class="form-control" />
        <span asp-validation-for="DatePosted" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
