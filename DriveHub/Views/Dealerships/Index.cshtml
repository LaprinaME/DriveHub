@model IEnumerable<DriveHub.Models.Dealership>
<style>
    body {
        background: url('../img/f.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        color: #222;
    }

    h1 {
        text-align: center;
        color: #FF0033; /* Красный */
        margin-top: 20px;
        text-shadow: 2px 2px #393c42; /* Темный серый */
    }

    .table-container {
        background: linear-gradient(135deg, #393c42, #FF0033); /* Серо-красный градиент */
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        color: #222; /* Темный шрифт */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table thead {
            background-color: #393c42; /* Темный серый */
            color: #FFFFFF;
        }

        .table th, .table td {
            padding: 10px;
            text-align: center;
        }

        .table tbody tr {
            background-color: #FFFFFF;
            color: #222;
        }

            .table tbody tr:nth-child(even) {
                background-color: #FF0033; /* Красный */
                color: #FFFFFF;
            }

            .table tbody tr:hover {
                background-color: #FF0033; /* Красный */
                color: #FFFFFF;
            }

    .return-button {
        display: inline-block;
        padding: 12px 20px; /* Увеличенные отступы */
        background-color: #FF0033; /* Красный фон */
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease; /* Плавный переход */
    }

        .return-button:hover {
            background-color: #dc3545; /* Темнее красный при наведении */
        }

        .return-button:focus {
            box-shadow: 0 0 0 0.2rem rgba(225, 83, 97, 0.5); /* Тень при фокусе */
        }
</style>
<h2>Автосалоны</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Код
            </th>
            <th>
                Наименование
            </th>
            <th>
                Адрес
            </th>
            <th>
                Телефон
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dealership in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => dealership.DealershipID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dealership.DealershipName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dealership.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dealership.Phone)
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="get" action="/Home/Index">
    <button type="submit" class="return-button">На главную</button>
</form>