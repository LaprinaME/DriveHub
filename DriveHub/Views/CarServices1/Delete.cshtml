@model DriveHub.Models.CarService

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: #393c42;
        color: #FFFFFF;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        width: 80%;
        max-width: 600px;
        padding: 20px;
        background-color: #393c42;
        border: 2px solid #FF0033;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    h1, h3 {
        color: #FF0033;
        text-align: center;
        margin-bottom: 20px;
    }

    .row dt {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        background-color: #393c42;
        color: #FFFFFF;
        border: 2px solid #FF0033;
        border-radius: 5px;
    }

        .form-control:focus {
            border-color: #FF0033;
            box-shadow: 0 0 10px #FF0033;
        }

    .btn-primary, .btn-danger, .return-button {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        background-color: #FF0033;
        border: none;
        color: #FFFFFF;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease; /* Плавный переход */
    }

        .btn-primary:hover, .btn-danger:hover, .return-button:hover {
            background-color: #CC0029;
        }

    .text-danger {
        color: #FF0033;
    }
</style>

<div class="container">
    <h1>Delete Car Service</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Car Service</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ServiceName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ServiceName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ServiceID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a class="btn return-button" asp-action="Index">Back to List</a>
    </div>
</div>
