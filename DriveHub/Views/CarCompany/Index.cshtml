@model IEnumerable<DriveHub.Models.CarCompany>

@{
    ViewData["Title"] = "Список автомобильных компаний";
}
<style>
    body {
        background: url('../img/f.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        color: #222;
    }

    h2 {
        text-align: center;
        color: #FF0033; /* Красный */
        margin-top: 20px;
        text-shadow: 2px 2px #393c42; /* Темный серый */
    }

    .table-container {
        background: linear-gradient(135deg, #393c42, #FF0033); /* Серо-красный градиент */
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        color: #222; /* Темный шрифт */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table thead {
            background-color: #393c42; /* Темный серый */
            color: #FFFFFF;
        }

        .table th, .table td {
            padding: 10px;
            text-align: center;
        }

        .table tbody tr {
            background-color: #FFFFFF;
            color: #222;
        }

            .table tbody tr:nth-child(even) {
                background-color: #FF0033; /* Красный */
                color: #FFFFFF;
            }

            .table tbody tr:hover {
                background-color: #FF0033; /* Красный */
                color: #FFFFFF;
            }

    .form-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #393c42;
        border: 2px solid #FF0033;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    select, button {
        display: block;
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        background-color: #FF0033;
        border: none;
        color: #FFFFFF;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease; /* Плавный переход */
    }

        select:hover, button:hover {
            background-color: #CC0029;
        }

        select:focus, button:focus {
            outline: none;
            box-shadow: 0 0 10px rgba(225, 83, 97, 0.5); /* Тень при фокусе */
        }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        margin-right: 10px;
        text-decoration: none;
        color: #fff;
        border-radius: 5px;
    }

    .btn-home {
        background-color: #FF0033;
    }

    .return-button {
        display: inline-block;
        padding: 12px 20px; /* Увеличенные отступы */
        background-color: #FF0033; /* Красный фон */
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease; /* Плавный переход */
    }

        .return-button:hover {
            background-color: #dc3545; /* Темнее красный при наведении */
        }

        .return-button:focus {
            box-shadow: 0 0 0 0.2rem rgba(225, 83, 97, 0.5); /* Тень при фокусе */
        }
</style>

<div class="table-container">
    <h2>Список автомобильных компаний</h2>
    <form asp-controller="CarCompany" asp-action="ChangeStatus">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Название компании</th>
                    <th>Страна</th>
                    <th>Статус</th>
                    <th>Изменить статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr>
                        <td>@company.CompanyID</td>
                        <td>@company.CompanyName</td>
                        <td>@company.Country</td>
                        <td>@company.Status</td>
                        <td>
                            <input type="checkbox" name="companyIds" value="@company.CompanyID" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <select name="newStatus">
            <option value="Активна">Активна</option>
            <option value="Неактивна">Неактивна</option>
        </select>
        <button type="submit">Изменить статус выбранных компаний</button>
    </form>
    <a class="btn btn-home" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
